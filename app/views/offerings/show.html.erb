<%= tag.div(class: "bg-gray-200 gap-2 p-4 mb-6") do %>
  <%= render ContainerComponent.new do %>
    <%= tag.div(class: "flex justify-between items-center mb-2") do %>
      <h1><%= @facade.offering.name %></h1>
    <% end %>
    <div class="mb-6 font-bold">
      <%= link_to vendor_path(@facade.vendor), class: "inline-flex items-center text-primary hover:text-primary-dark flex gap-2" do %>
        <%= render IconComponent.new(IconComponent::Data[:arrow_left]) %>
        Back to Vendor
      <% end %>
    </div>
  <% end %>
<% end %>
<%= render ContainerComponent.new do %>
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <!-- Main Content -->
    <div class="lg:col-span-2">
      <% if @facade.has_offering_image? %>
        <%= render SectionCardComponent.new do %>
          <%= image_tag url_for(@facade.offering_image), class: "w-full h-auto rounded-lg shadow-lg" %>
        <% end %>
      <% end %>

      <% if @facade.has_description? %>
        <%= render SectionCardComponent.new(title: "Description") do %>
          <div class="prose max-w-none">
            <%= @facade.offering.description %>
          </div>
        <% end %>
      <% end %>

      <% if @facade.has_ingredients? %>
        <%= tag.div(class: "mt-6") do %>
          <%= render SectionCardComponent.new(title: "Ingredients (per #{@facade.offering.base_serving_size} #{"serving".pluralize(@facade.offering.base_serving_size)})") do %>
            <ul class="space-y-2">
              <% @facade.ingredients.each do |ingredient| %>
                <li class="flex items-start">
                  <span class="text-primary mr-2 mt-1">â€¢</span>
                  <span class="text-gray-700">
                    <%= ingredient.full_name %>
                  </span>
                </li>
              <% end %>
            </ul>
          <% end %>
        <% end %>
      <% end %>
    </div>

    <!-- Sidebar -->
    <div class="lg:col-span-1 gap-6 flex flex-col">
      <%= render SectionCardComponent.new(title: "Pricing") do %>
        <% if @facade.has_price_points? %>
          <%= render Offering::PricingTierComponent.new(
            price_points: @facade.price_points,
            selected_size: @facade.selected_serving_size
          ) %>

          <div class="mt-6 p-4 bg-gray-50 rounded-lg">
            <h4 class="font-semibold text-gray-900 mb-2">Details</h4>
            <dl class="space-y-2 text-sm">
              <div>
                <dt class="text-gray-500">Base Serving Size</dt>
                <dd class="font-medium text-gray-900"><%= @facade.offering.base_serving_size %> servings</dd>
              </div>
              <% if @facade.has_meal_types? %>
                <div>
                  <dt class="text-gray-500">Meal Types</dt>
                  <dd class="font-medium text-gray-900">
                    <%= @facade.offering.meal_types.pluck(:name).join(", ") %>
                  </dd>
                </div>
              <% end %>
            </dl>
          </div>
        <% else %>
          <p class="text-gray-500 text-sm">Pricing information not available.</p>
        <% end %>
      <% end %>

      <% if @facade.show_request_quote? %>
        <%= render SectionCardComponent.new(title: "Request a Quote") do %>
          <% if @facade.already_selected? %>
            <div class="text-center py-4">
              <div class="inline-flex items-center px-4 py-2 bg-green-100 text-green-800 rounded-lg mb-4">
                <i class="fas fa-check-circle mr-2"></i>
                <span class="font-semibold">Already in Your Selections</span>
              </div>
              <p class="text-sm text-gray-600 mb-4">
                This offering is already in your cart. You can view and manage all your selections below.
              </p>
              <%= link_to offering_inquiries_path, class: "inline-block w-full px-4 py-2 bg-primary text-white rounded hover:bg-primary/90 transition-colors text-center" do %>
                <i class="fas fa-shopping-cart mr-2"></i>
                View My Selections
              <% end %>
            </div>
          <% else %>
            <p class="text-sm text-gray-600 mb-4">
              Interested in this offering? Add it to your selections and send an inquiry to the vendor.
            </p>

            <%= form_with model: @facade.new_offering_inquiry,
                          url: offering_inquiries_path,
                          method: :post,
                          local: true,
                          class: "space-y-4" do |f| %>
              <%= f.hidden_field :offering_id, value: @facade.offering.id %>

              <div>
                <%= f.label :serving_size, "Serving Size", class: "block text-sm font-medium text-gray-700 mb-1" %>
                <%= f.select :serving_size,
                             @facade.offering.available_serving_sizes.map { |size| ["#{size} servings", size] },
                             { selected: @facade.selected_serving_size },
                             class: "w-full rounded border-gray-300 shadow-sm focus:border-primary focus:ring focus:ring-primary focus:ring-opacity-50" %>
              </div>

              <div>
                <%= f.label :quantity, class: "block text-sm font-medium text-gray-700 mb-1" %>
                <%= f.number_field :quantity,
                                   value: 1,
                                   min: 1,
                                   class: "w-full rounded border-gray-300 shadow-sm focus:border-primary focus:ring focus:ring-primary focus:ring-opacity-50" %>
              </div>

              <div>
                <%= f.label :delivery_date, "Desired Delivery Date", class: "block text-sm font-medium text-gray-700 mb-1" %>
                <%= f.date_field :delivery_date,
                                 value: 7.days.from_now.to_date,
                                 min: Date.tomorrow,
                                 class: "w-full rounded border-gray-300 shadow-sm focus:border-primary focus:ring focus:ring-primary focus:ring-opacity-50" %>
              </div>

              <div>
                <%= f.label :notes, "Special Requests (Optional)", class: "block text-sm font-medium text-gray-700 mb-1" %>
                <%= f.text_area :notes,
                                rows: 3,
                                placeholder: "Any dietary restrictions, delivery instructions, or special requests...",
                                class: "w-full rounded border-gray-300 shadow-sm focus:border-primary focus:ring focus:ring-primary focus:ring-opacity-50" %>
              </div>

              <%= f.submit "Add to Selections",
                           class: "w-full px-4 py-2 bg-primary text-white rounded hover:bg-primary/90 transition-colors cursor-pointer font-semibold" %>
            <% end %>
          <% end %>
        <% end %>
      <% end %>

      <%= render SectionCardComponent.new(title: "Vendor") do %>
        <div class="text-center">
          <h3 class="font-bold text-lg text-gray-900 mb-2">
            <%= @facade.offering.vendor.business_name %>
          </h3>

          <% if @facade.has_vendor_logo? %>
            <div class="my-4">
              <%= image_tag url_for(@facade.vendor_logo), class: "w-32 h-32 mx-auto object-contain" %>
            </div>
          <% end %>

          <% if @facade.has_vendor_description? %>
            <p class="text-gray-600 text-sm mb-4">
              <%= truncate(@facade.offering.vendor.description, length: 150) %>
            </p>
          <% end %>

          <%= link_to "View All Offerings", vendor_offerings_path(@facade.offering.vendor), class: "inline-block px-4 py-2 bg-primary text-white rounded hover:bg-primary/90 transition-colors" %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>

<% if record.errors.any? %>
  <div role="alert">
    <div class="bg-[#f56565] text-white font-bold rounded-t px-4 py-2">
      <%= pluralize(record.errors.count, "error") %> prohibited this recipe from being saved:
    </div>
    <div class="border border-t-0 border-[#f56565] rounded-b bg-red-100 px-4 py-3 text-red-700">
      <ul>
        <% record.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>
<%= meal_planner_form_with(model: facade.ingredient, url: facade.form_url, data: { turbo: false }) do |form| %>
  <%= render 'components/errors', model: facade.ingredient %>
  <%= form.input :name, class: "col-4" %>
  <%= form.select_input(:packaging_form, facade.packaging_form_options, include_blank: true, label_text: "Packaging") %>
  <%= form.select_input(:preparation_style, facade.preparation_style_options, include_blank: true, label_text: "Preparation") %>
  <%= form.collection_select_input(
    :ingredient_category_id,
    facade.ingredient_categories,
    :id,
    :name,
    label_text: "Category",
    include_blank: "No Category"
  ) %>
  <%= form.actions cancel_path: facade.cancel_path %>
<% end %>

<%= meal_planner_form_with(model: [:admin, meal_plan]) do |form| %>
  <%= render 'components/errors', model: meal_plan %>
  <%= form.input :name, class: "col-4" %>
  <%= form.check_box_input(:featured) %>
  <%= form.input :description, as: :text_area %>
  <%= form.actions cancel_path: :back %>
<% end %>

<%= render HeaderBarComponent.new(title: "Admin") do |c| %>
  <% c.with_breadcrumb_collection(@facade.breadcrumb_trail) %>
  <% c.with_icon_link_collection(@facade.header_actions) %>
<% end %>

<%= render ContainerComponent.new do %>
  <%= render SectionCardComponent.new(title: @facade.offering.name, class: "mb-6") do %>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <h3 class="text-sm font-semibold text-gray-500 uppercase tracking-wide mb-2">Offering Details</h3>
        <dl class="space-y-2">
          <div>
            <dt class="text-sm font-medium text-gray-500">Vendor</dt>
            <dd class="text-sm text-gray-900">
              <%= link_to @facade.offering.vendor.business_name, [:admin, @facade.offering.vendor], class: "text-primary hover:underline" %>
            </dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Base Serving Size</dt>
            <dd class="text-sm text-gray-900"><%= @facade.offering.base_serving_size %> servings</dd>
          </div>
          <% if @facade.offering.meal_types.any? %>
            <div>
              <dt class="text-sm font-medium text-gray-500">Meal Types</dt>
              <dd class="text-sm text-gray-900"><%= @facade.offering.meal_types.pluck(:name).join(", ") %></dd>
            </div>
          <% end %>
          <div>
            <dt class="text-sm font-medium text-gray-500">Featured</dt>
            <dd class="text-sm text-gray-900">
              <%= render BadgeComponent.new(badge_data: @facade.featured_badge) %>
            </dd>
          </div>
        </dl>
      </div>

      <div>
        <% if @facade.offering.image.attached? %>
          <%= image_tag @facade.offering.image, class: "w-full h-auto rounded-lg shadow-md" %>
        <% end %>
      </div>
    </div>

    <% if @facade.offering.description.present? %>
      <div class="mt-6">
        <h3 class="text-sm font-semibold text-gray-500 uppercase tracking-wide mb-2">Description</h3>
        <div class="prose max-w-none"><%= @facade.offering.description %></div>
      </div>
    <% end %>
  <% end %>

  <% if @facade.price_points.any? %>
    <%= render SectionCardComponent.new(title: "Price Points", class: "mb-6") do %>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Serving Size</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Price</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Price per Serving</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @facade.price_points.each do |price_point| %>
              <tr>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                  <%= price_point.serving_size %> servings
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= number_to_currency(price_point.price) %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= number_to_currency(price_point.price / price_point.serving_size) %> / serving
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% end %>
  <% end %>

  <% if @facade.ingredients.any? %>
    <%= render SectionCardComponent.new(title: "Ingredients", class: "mb-6") do %>
      <ul class="space-y-2">
        <% @facade.ingredients.each do |ingredient| %>
          <li class="flex items-start">
            <span class="text-primary mr-2">â€¢</span>
            <span><%= ingredient.full_name %></span>
          </li>
        <% end %>
      </ul>
    <% end %>
  <% end %>
<% end %>

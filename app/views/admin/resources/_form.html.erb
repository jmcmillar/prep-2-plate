<%= meal_planner_form_with(model: [:admin, resource]) do |form| %>
  <%= render 'components/errors', model: resource %>
  <%= form.input :name, class: "col-4" %>
  <%= form.input :description, as: :text_area, class: "col-4" %>
  <%= form.input :attachment, as: :file_field, class: "col-12" %>
  <%= form.actions cancel_path: :back %>
<% end %>

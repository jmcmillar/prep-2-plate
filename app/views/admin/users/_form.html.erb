<%= meal_planner_form_with(model: facade.resource, url: facade.form_url, data: { turbo: false}) do |form| %>
  <%= render 'components/errors', model: facade.resource %>
  <%= form.input :email, as: :email_field %>
  <%= form.input :first_name %>
  <%= form.input :last_name %>
  <%= form.check_box_input :admin %>
  <%= form.check_box_input :deactivated %>
  <%= form.actions cancel_path: :back %>
<% end %>

<%= meal_planner_form_with(model: facade.meal_plan_recipe, url: facade.form_url) do |form| %>
  <%= render 'components/errors', model: facade.meal_plan_recipe %>
  <%= tag.div(class: "row") do %>
    <%= tag.div(class: "col-12") do %>
      <%= form.searchable_collection_select_input :recipe_id, Recipe.order(:name), :id, :name, {prompt: "Start typing"} %>
    <% end %>
    <%= tag.div(class: "col-12") do %>
      <%= form.input :date, as: :date_field, value: params[:date] %>
    <% end %>
  <% end %>
  <%= form.actions cancel_path: facade.cancel_path %>
<% end %>

<%= tag.div(class: "bg-gray-200 gap-2 p-4 mb-6") do %>
  <%= render ContainerComponent.new do %>
    <%= tag.div(class: "flex justify-between items-center mb-2") do %>
      <h1>Recipes</h1>
      <%= render ButtonLinkComponent.new(button_link_data: @facade.my_recipes_link_data) %>
    <% end %>
    <%= tag.div(class: "flex flex-wrap items-center gap-2") do %>
      <%= render SearchFormComponent.new(@facade.search_data) %>
      <%= tag.div(class: "mt-2") do %>
        <%= render FilterComponent.new(@facade.meal_type_filter_data) %>
        <%= render FilterComponent.new(@facade.recipe_category_filter_data) %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
<%= render ContainerComponent.new(id: "recipe") do %>
  <%= render "recipe_list", recipes: @facade.collection.to_a, pagy: @facade.pagy %>
<% end %>


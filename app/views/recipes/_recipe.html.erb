<div id="<%= dom_id recipe.resource %>">
  <%= link_to recipe.resource do %>
    <%= tag.div(class: "bg-white rounded-2xl shadow hover:shadow-md transition overflow-hidden") do %>
      <!-- Image -->
      <%# image_tag((recipe.image.attached? ? url_for(recipe.image) :image_url('no-recipe-image.png')), class: "w-full h-48 object-cover") %>

      <!-- Content -->
      <div class="p-4">
        <!-- Title -->
        <h3 class="text-lg font-semibold text-gray-900 mb-1"><%= recipe.name %></h3>
                <!-- Categories -->
        <div class="mt-3 flex flex-wrap gap-2">
          <% recipe.meal_types.each do |cat| %>
            <%= tag.span(class: "text-xs bg-primary text-white px-2 py-1 rounded-full") {cat} %>
          <% end %>
        </div>

        <!-- Categories -->
        <div class="mt-3 flex flex-wrap gap-2">
          <% recipe.recipe_categories.each do |cat| %>
            <%= tag.span(class: "text-xs bg-secondary text-white px-2 py-1 rounded-full") {cat} %>
          <% end %>
        </div>

      </div>
    <% end %>
  <% end %>
</div>

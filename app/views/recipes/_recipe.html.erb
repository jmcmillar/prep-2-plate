<div id="<%= dom_id recipe.resource %>">
  <%= link_to recipe.resource do %>
    <%= tag.div(class: "bg-white rounded-2xl shadow-sm hover:shadow-md transition overflow-hidden") do %>
      <!-- Image -->
      <%= image_tag(url_for(recipe.image), class: "w-full lg:h-48 h-24 object-cover") %>

      <!-- Content -->
      <div class="p-4">
        <!-- Title -->
        <p class="lg:text-lg text-sm font-semibold text-gray-900 mb-1"><%= recipe.name %></p>
                <!-- Categories -->
        <div class="flex flex-wrap gap-2">
          <% recipe.meal_types.each do |cat| %>
            <%= tag.span(class: "text-xs bg-primary text-white px-2 py-1 rounded-full") {cat} %>
          <% end %>
        </div>

        <!-- Categories -->
        <div class="flex flex-wrap gap-2">
          <% recipe.recipe_categories.each do |cat| %>
            <%= tag.span(class: "text-xs bg-secondary text-white px-2 py-1 rounded-full") {cat} %>
          <% end %>
        </div>

      </div>
    <% end %>
  <% end %>
</div>

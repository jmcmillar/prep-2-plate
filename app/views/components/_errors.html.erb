<% if model.errors.any? %>
  <div class="rounded border bg-primary text-gray-600 bg-opacity-25 z-0 p-6 mb-6">
    <strong>Please fix the following errors:</strong>
    <ul class="mb-0">
      <% model.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

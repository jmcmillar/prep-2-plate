<%= turbo_frame_tag :modal do %>
    <button
      aria-label="Close Dialog"
      class="absolute top-0 right-0 p-3 leading-none text-sm flex items-center z-30"
      data-action="click->modal#toggle"
      type="button"
      style="z-index: 30;"
    >
      <%= tag.i(class: "fal fa-times-circle fa-2x") %>
    </button>
    <%= tag.div(class: "bg-gray-200 gap-2 p-4 mb-6 sticky top-0 z-20 py-6") do %>
      <%= render ContainerComponent.new do %>
        <%= tag.div(class: "flex justify-between items-center gap-2 flex-wrap") do %>
          <%= render SearchFormComponent.new(@facade.search_data, advance: false) %>
          <%= tag.div(class: "mt-2") do %>
            <%= render FilterComponent.new(@facade.meal_type_filter_data) %>
            <%= render FilterComponent.new(@facade.recipe_category_filter_data) %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
    <%= tag.div(class: "p-4") do %>
      <%= render "recipe_list", recipes: @facade.collection.to_a %>
    <% end %>
<% end %>

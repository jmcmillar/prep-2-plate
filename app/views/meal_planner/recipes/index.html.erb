<%= turbo_frame_tag :modal do %>
    <%= tag.div(class: "bg-gray-200 gap-2 p-4 mb-6 sticky top-0 z-20 py-6") do %>
      <%= render ContainerComponent.new do %>
        <%= tag.div(class: "flex justify-between items-center gap-2 flex-wrap") do %>
          <%= render SearchFormComponent.new(@facade.search_data, advance: false) %>
          <%= render ButtonLinkComponent.new(button_link_data: @facade.new_user_recipe_link_data) %>
        <% end %>
      <% end %>
    <% end %>
    <%= tag.div(class: "p-4") do %>
      <%= render "recipe_list", recipes: @facade.collection.to_a %>
    <% end %>
<% end %>

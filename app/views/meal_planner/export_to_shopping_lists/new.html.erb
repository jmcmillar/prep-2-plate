<%= turbo_frame_tag :modal do %>
  <%= tag.div(class: "bg-gray-200 gap-2 p-4 mb-6 sticky top-0 z-20 py-4") do %>
    <%= render ContainerComponent.new do %>
      <label for="shopping_list_id" class="block text-sm font-medium text-gray-700 mb-1">
          Add to shopping list
        </label>
        <select id="shopping_list_id"
          name="shopping_list_id"
          data-controller="ingredient-item-select"
          class="block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm">
          <%= options_from_collection_for_select(@facade.shopping_lists, :id, :name) %>
        </select>
    <% end %>
  <% end %>
  <%= render ContainerComponent.new do %>
    <div class="space-y-6">
      <!-- Ingredients List -->
      <div class="divide-y divide-gray-200">
        <% @facade.ingredients.each_with_index do |ingredient, i| %>

          <div class="py-3 flex items-center justify-between gap-2"
              data-controller="ingredient-item">

            <!-- Checkbox + Label/Input -->
            <div class="flex items-center gap-3 flex-grow">
              <input
                type="checkbox"
                class="rounded border-gray-300 text-indigo-600 shadow-sm focus:ring-indigo-500"
                data-action="ingredient-item#toggle"
              />
              <span data-ingredient-item-target="label" class="text-gray-800 text-sm"><%= ingredient.ingredient_name %></span>
              <input
                type="text"
                value="<%= ingredient.ingredient_name %>"
                class="hidden border rounded px-2 py-1 text-sm flex-1"
                data-ingredient-item-target="input"
              />
              <button type="button"
                data-action="ingredient-item#edit"
                class="text-gray-500 hover:text-indigo-600"
                title="Edit item"
              >
                <i class="fal fa-pencil"></i>
            </button>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
<% end %>

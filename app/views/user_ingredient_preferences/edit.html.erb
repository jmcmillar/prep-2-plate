<div class="container mx-auto px-4 py-8 max-w-2xl">
  <h1 class="text-3xl font-bold mb-6">Edit Brand Preference</h1>

  <div class="bg-white shadow-md rounded-lg p-6">
    <%= render "form" %>
  </div>

  <div class="mt-6">
    <%= button_to "Delete Preference",
        user_ingredient_preference_path(@facade.preference),
        method: :delete,
        data: { confirm: "Are you sure you want to delete this preference?" },
        class: "btn btn-danger" %>
  </div>
</div>

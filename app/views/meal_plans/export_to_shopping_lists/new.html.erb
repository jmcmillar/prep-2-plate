<%= turbo_frame_tag :modal do %>
  <button
    aria-label="Close Dialog"
    class="fixed top-0 right-0 p-3 leading-none text-sm flex items-center z-30"
    data-action="click->modal#toggle"
    type="button"
    style="z-index: 30;"
  >
    <%= tag.i(class: "fal fa-times-circle fa-2x") %>
  </button>
  <!-- Header / Selector -->
  <div class="bg-white shadow-sm p-4 sticky top-0 z-20 border-b border-gray-100">
    <%= render ContainerComponent.new do %>
      <label for="shopping_list_id" class="block text-sm font-medium text-gray-700 mb-1">
        Add ingredients to shopping list
      </label>
      <select
        id="shopping_list_id"
        name="shopping_list_id"
        data-controller="ingredient-item-select"
        class="block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring-primary sm:text-sm px-3 py-2"
      >
        <%= options_from_collection_for_select(@facade.shopping_lists, :id, :name) %>
      </select>
    <% end %>
  </div>

  <!-- Ingredients List -->
  <%= render ContainerComponent.new do %>
    <div class="bg-gray-50 p-4 min-h-screen" data-controller="ingredient-item">
      <!-- Add New Item Form -->
      <div class="bg-white rounded-lg shadow-sm p-4 mb-4">
        <div class="flex items-center gap-2">
          <input
            type="text"
            placeholder="Add new item..."
            data-ingredient-item-target="newItemInput"
            data-action="keydown.enter->ingredient-item#addItem"
            class="flex-1 border rounded-md px-3 py-2 text-sm focus:border-primary focus:ring-primary"
          />
          <button
            type="button"
            data-action="ingredient-item#addItem"
            class="px-4 py-2 bg-primary text-white rounded-md hover:bg-primary/90 transition-colors text-sm font-medium"
          >
            <i class="fal fa-plus mr-1"></i> Add
          </button>
        </div>
      </div>

      <!-- Ingredients List Container -->
      <div class="bg-white rounded-2xl shadow-sm divide-y divide-gray-100/50">
        <% @facade.ingredients.each_with_index do |ingredient, i| %>
          <div
            class="flex items-center justify-between px-4 py-3 hover:bg-secondary/5 transition-colors"
            data-controller="ingredient-item"
          >
            <!-- Left side: checkbox + name -->
            <div class="flex items-center gap-3 flex-grow">
              <input
                type="checkbox"
                class="h-4 w-4 rounded border-gray-300 text-primary focus:ring-primary"
                data-action="ingredient-item#toggle"
              />

              <span
                data-ingredient-item-target="label"
                class="text-gray-800 text-sm font-medium cursor-pointer"
                data-action="click->ingredient-item#edit"
              >
                <%= "#{ingredient.name} (#{MealPlanIngredient::NameDecorator.new(ingredient).formatted_quantity})" %>
              </span>

              <input
                type="text"
                value="<%= ingredient.name %>"
                class="hidden border rounded px-2 py-1 text-sm flex-1"
                data-ingredient-item-target="input"
                data-action="blur->ingredient-item#saveEdit keydown.enter->ingredient-item#saveEdit keydown.escape->ingredient-item#cancelEdit"
              />
            </div>

            <!-- Right side: edit and remove buttons -->
            <div class="flex items-center gap-2">
              <button
                type="button"
                data-action="ingredient-item#edit"
                class="text-gray-400 hover:text-primary transition-colors p-1"
                title="Edit item"
              >
                <i class="fal fa-pencil"></i>
              </button>
              
              <button
                type="button"
                data-action="ingredient-item#remove"
                class="text-gray-400 hover:text-red-500 transition-colors p-1"
                title="Remove item"
              >
                <i class="fal fa-trash"></i>
              </button>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
<% end %>

<%= tag.div(class: "bg-gray-200 gap-2 p-4 mb-6") do %>
  <%= render ContainerComponent.new do %>
    <%= tag.div(class: "flex justify-between items-center mb-2") do %>
      <h1><%= @facade.vendor.business_name %></h1>
    <% end %>
    <div class="mb-6 font-bold">
      <%= link_to vendors_path, class: "inline-flex items-center text-primary hover:text-primary-dark flex gap-2" do %>
        <%= render IconComponent.new(IconComponent::Data[:arrow_left]) %>
        Back to All Vendors
      <% end %>
    </div>
  <% end %>
<% end %>
<%= render ContainerComponent.new do %>
  <% if @facade.vendor.logo.attached? %>
    <div class="mb-8 text-center">
      <%= image_tag @facade.vendor.logo, class: "h-24 mx-auto", alt: @facade.vendor.business_name %>
    </div>
  <% end %>

  <% if @facade.featured_offerings.any? %>
    <%= render SectionCardComponent.new(title: "Featured Offerings", class: "mb-6") do %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
        <% @facade.featured_offerings.each do |offering| %>
          <%= link_to offering_path(offering), class: "block group" do %>
            <div class="border-2 border-yellow-400 rounded-lg p-4 hover:shadow-xl transition-shadow h-full relative">
              <div class="absolute top-2 right-2">
                <span class="px-2 py-1 bg-yellow-400 text-yellow-900 text-xs font-bold rounded">
                  Featured
                </span>
              </div>

              <% if offering.image.attached? %>
                <div class="w-full h-48 mb-3 overflow-hidden rounded-lg">
                  <%= image_tag offering.image, class: "w-full h-full object-cover group-hover:scale-105 transition-transform duration-300" %>
                </div>
              <% end %>

              <h3 class="text-lg font-bold text-gray-900 group-hover:text-primary mb-2">
                <%= offering.name %>
              </h3>

              <% if offering.offering_price_points.any? %>
                <div class="text-primary font-bold mb-2">
                  From <%= number_to_currency(offering.offering_price_points.minimum(:price)) %>
                </div>
              <% end %>

              <% if offering.meal_types.any? %>
                <div class="flex flex-wrap gap-1">
                  <% offering.meal_types.each do |meal_type| %>
                    <span class="px-2 py-1 bg-gray-100 text-gray-600 text-xs rounded">
                      <%= meal_type.name %>
                    </span>
                  <% end %>
                </div>
              <% end %>
            </div>
          <% end %>
        <% end %>
      </div>
    <% end %>
  <% end %>

  <%= render SectionCardComponent.new(title: "All Offerings") do %>
    <%= tag.div(class: "flex flex-wrap items-center gap-2 mb-6") do %>
      <%= render SearchFormComponent.new(@facade.search_data) %>
      <%= tag.div(class: "mt-6") do %>
        <%= render FilterComponent.new(@facade.meal_type_filter_data) %>
      <% end %>
    <% end %>
    <%= render partial: "offering_list", locals: { facade: @facade } %>
  <% end %>
<% end %>

<%= tag.div(class: "bg-gray-200 gap-2 p-4 mb-6") do %>
  <%= render ContainerComponent.new do %>
    <%= tag.div(class: "flex justify-between items-center mb-2") do %>
      <h1>Vendors</h1>
    <% end %>
  <% end %>
<% end %>
<%= render ContainerComponent.new do %>
  <% if @facade.vendors.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @facade.vendors.each do |vendor| %>
        <%= link_to vendor_offerings_path(vendor), class: "block group" do %>
          <%= render SectionCardComponent.new(class: "h-full hover:shadow-xl transition-shadow") do %>
            <div class="flex flex-col h-full">
              <% if vendor.logo.attached? %>
                <div class="w-full h-48 mb-4 overflow-hidden rounded-lg">
                  <%= image_tag vendor.logo, class: "w-full h-full object-cover group-hover:scale-105 transition-transform duration-300" %>
                </div>
              <% end %>

              <h3 class="text-xl font-bold text-gray-900 group-hover:text-primary mb-2">
                <%= vendor.business_name %>
              </h3>

              <% if vendor.description.present? %>
                <p class="text-gray-600 text-sm mb-4 flex-grow line-clamp-3">
                  <%= vendor.description %>
                </p>
              <% end %>

              <div class="flex items-center justify-between pt-4 border-t border-gray-200">
                <span class="text-sm text-gray-500">
                  <%= pluralize(vendor.offerings.count, 'offering') %>
                </span>
                <span class="text-primary font-semibold">
                  View Menu â†’
                </span>
              </div>
            </div>
          <% end %>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <%= render SectionCardComponent.new do %>
      <div class="text-center py-12">
        <p class="text-gray-500">No vendors available at this time.</p>
      </div>
    <% end %>
  <% end %>
<% end %>

<%= render BackgroundImageContainerComponent.new(image: "public-hero.jpg", title: @facade.vendor.business_name, description: @facade.vendor.description) %>

<%= render ContainerComponent.new do %>
  <%= render SectionCardComponent.new(title: "About #{@facade.vendor.business_name}") do %>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <dl class="space-y-3">
          <% if @facade.vendor.contact_email.present? %>
            <div>
              <dt class="text-sm font-medium text-gray-500">Contact</dt>
              <dd class="text-sm text-gray-900"><%= mail_to @facade.vendor.contact_email %></dd>
            </div>
          <% end %>
          <% if @facade.vendor.phone_number.present? %>
            <div>
              <dt class="text-sm font-medium text-gray-500">Phone</dt>
              <dd class="text-sm text-gray-900"><%= @facade.vendor.phone_number %></dd>
            </div>
          <% end %>
          <% if @facade.vendor.website_url.present? %>
            <div>
              <dt class="text-sm font-medium text-gray-500">Website</dt>
              <dd class="text-sm text-gray-900">
                <%= link_to @facade.vendor.website_url, @facade.vendor.website_url, target: "_blank", rel: "noopener", class: "text-primary hover:underline" %>
              </dd>
            </div>
          <% end %>
        </dl>
      </div>

      <% if @facade.vendor.logo.attached? %>
        <div class="flex items-center justify-center">
          <%= image_tag @facade.vendor.logo, class: "max-w-full h-auto rounded-lg shadow-md" %>
        </div>
      <% end %>
    </div>
  <% end %>

  <% if @facade.offerings.any? %>
    <%= render SectionCardComponent.new(title: "Menu Offerings") do %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% @facade.offerings.each do |offering| %>
          <%= link_to offering_path(offering), class: "block group" do %>
            <div class="border border-gray-200 rounded-lg p-4 hover:shadow-lg transition-shadow h-full">
              <% if offering.image.attached? %>
                <div class="w-full h-40 mb-3 overflow-hidden rounded-lg">
                  <%= image_tag offering.image, class: "w-full h-full object-cover group-hover:scale-105 transition-transform duration-300" %>
                </div>
              <% end %>

              <h3 class="text-lg font-bold text-gray-900 group-hover:text-primary mb-2">
                <%= offering.name %>
              </h3>

              <% if offering.offering_price_points.any? %>
                <div class="text-sm text-gray-600 mb-2">
                  From <%= number_to_currency(offering.offering_price_points.minimum(:price)) %>
                </div>
              <% end %>

              <% if offering.meal_types.any? %>
                <div class="flex flex-wrap gap-1 mt-2">
                  <% offering.meal_types.limit(3).each do |meal_type| %>
                    <span class="px-2 py-1 bg-gray-100 text-gray-600 text-xs rounded">
                      <%= meal_type.name %>
                    </span>
                  <% end %>
                </div>
              <% end %>
            </div>
          <% end %>
        <% end %>
      </div>
    <% end %>
  <% else %>
    <%= render SectionCardComponent.new do %>
      <div class="text-center py-12">
        <p class="text-gray-500">No offerings available from this vendor at this time.</p>
      </div>
    <% end %>
  <% end %>
<% end %>

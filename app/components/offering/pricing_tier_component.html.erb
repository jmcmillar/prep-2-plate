<div class="grid grid-cols-2 lg:grid-cols-3 gap-4">
  <% price_points.each do |price_point| %>
    <div class="<%= selected?(price_point) ? 'ring-2 ring-primary' : 'border border-gray-200' %> rounded-lg p-4 text-center hover:shadow-lg transition-shadow">
      <div class="text-lg font-bold text-gray-900"><%= price_point.serving_size %></div>
      <div class="text-xs text-gray-500 mb-2">servings</div>
      <div class="text-2xl font-bold text-primary"><%= number_to_currency(price_point.price) %></div>
      <div class="text-xs text-gray-500 mt-1">
        <%= number_to_currency(price_per_serving(price_point)) %> / serving
      </div>
    </div>
  <% end %>
</div>

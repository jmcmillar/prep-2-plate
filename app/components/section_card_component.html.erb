<%= tag.div(class: class_names("rounded shadow-sm border border-gray-200", @class)) do %>
  <% if @title %>
    <%= tag.div(class: "w-full border-b border-gray-200 p-4 flex justify-between items-center") do %>
      <%= title_section %>
      <%= tag.div do %>
        <%= icon_link_collection %>
        <% end %>
    <% end %>
  <% end %>
  <%= tag.div(class: "p-4") do %>
    <%= content %>
  <% end %>
<% end %>

